{
  "info": {
    "name": "Sistema Microservicios - Clientes y Reservas",
    "description": "Colección de pruebas para sistema de microservicios con idempotencia",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000/api",
      "type": "string"
    },
    {
      "key": "cliente_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "reserva_id",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Clientes",
      "item": [
        {
          "name": "Crear Cliente",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('cliente_id', response.id);",
                  "    pm.test('Cliente creado exitosamente', () => {",
                  "        pm.expect(response).to.have.property('id');",
                  "        pm.expect(response).to.have.property('email');",
                  "    });",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nombre\": \"Juan Pérez\",\n  \"email\": \"juan.perez@example.com\",\n  \"telefono\": \"+58 412 1234567\",\n  \"activo\": true\n}"
            },
            "url": {
              "raw": "{{base_url}}/clientes",
              "host": ["{{base_url}}"],
              "path": ["clientes"]
            }
          },
          "response": []
        },
        {
          "name": "Obtener Todos los Clientes",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/clientes",
              "host": ["{{base_url}}"],
              "path": ["clientes"]
            }
          },
          "response": []
        },
        {
          "name": "Obtener Cliente por ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/clientes/{{cliente_id}}",
              "host": ["{{base_url}}"],
              "path": ["clientes", "{{cliente_id}}"]
            }
          },
          "response": []
        },
        {
          "name": "Actualizar Cliente",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"telefono\": \"+58 414 9876543\",\n  \"nombre\": \"Juan Carlos Pérez\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/clientes/{{cliente_id}}",
              "host": ["{{base_url}}"],
              "path": ["clientes", "{{cliente_id}}"]
            }
          },
          "response": []
        },
        {
          "name": "Eliminar Cliente",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/clientes/{{cliente_id}}",
              "host": ["{{base_url}}"],
              "path": ["clientes", "{{cliente_id}}"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Reservas",
      "item": [
        {
          "name": "Crear Reserva",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('reserva_id', response.id);",
                  "    pm.test('Reserva creada exitosamente', () => {",
                  "        pm.expect(response).to.have.property('id');",
                  "        pm.expect(response).to.have.property('idempotenciaKey');",
                  "        pm.expect(response.estado).to.equal('confirmada');",
                  "    });",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"clienteId\": {{cliente_id}},\n  \"servicioNombre\": \"Consulta Médica General\",\n  \"fechaReserva\": \"2025-12-20T15:00:00Z\",\n  \"duracionMinutos\": 60,\n  \"notas\": \"Primera consulta del paciente\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/reservas",
              "host": ["{{base_url}}"],
              "path": ["reservas"]
            }
          },
          "response": []
        },
        {
          "name": "Crear Reserva (Test Idempotencia)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Debe retornar reserva existente', () => {",
                  "    const response = pm.response.json();",
                  "    pm.expect(response).to.have.property('id');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"clienteId\": {{cliente_id}},\n  \"servicioNombre\": \"Consulta Médica General\",\n  \"fechaReserva\": \"2025-12-20T15:00:00Z\",\n  \"duracionMinutos\": 60,\n  \"notas\": \"Primera consulta del paciente\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/reservas",
              "host": ["{{base_url}}"],
              "path": ["reservas"]
            }
          },
          "response": []
        },
        {
          "name": "Obtener Todas las Reservas",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/reservas",
              "host": ["{{base_url}}"],
              "path": ["reservas"]
            }
          },
          "response": []
        },
        {
          "name": "Obtener Reserva por ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/reservas/{{reserva_id}}",
              "host": ["{{base_url}}"],
              "path": ["reservas", "{{reserva_id}}"]
            }
          },
          "response": []
        },
        {
          "name": "Obtener Reservas por Cliente",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/reservas/cliente/{{cliente_id}}",
              "host": ["{{base_url}}"],
              "path": ["reservas", "cliente", "{{cliente_id}}"]
            }
          },
          "response": []
        },
        {
          "name": "Cancelar Reserva",
          "request": {
            "method": "PATCH",
            "header": [],
            "url": {
              "raw": "{{base_url}}/reservas/{{reserva_id}}/cancelar",
              "host": ["{{base_url}}"],
              "path": ["reservas", "{{reserva_id}}", "cancelar"]
            }
          },
          "response": []
        }
      ]
    },
    {
